<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudionDonationStokvel" parent="Theme.Material3.Light.NoActionBar">
        <!-- Core palette -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryContainer">@color/purple_200</item>
        <item name="colorOnPrimaryContainer">@color/indigo_900</item>

        <item name="colorSecondary">@color/coral_400</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        <item name="colorSecondaryContainer">@color/amber_400</item>
        <item name="colorOnSecondaryContainer">@color/indigo_900</item>

        <item name="colorTertiary">@color/mint_400</item>
        <item name="colorOnTertiary">@color/indigo_900</item>

        <item name="colorSurface">@color/surface_elevated</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/background_soft</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="colorBackground">@color/background_soft</item>
        <item name="android:colorBackground">@color/background_soft</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/purple_500</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Components -->
        <item name="materialCardViewStyle">@style/Widget.StudionDonationStokvel.MaterialCard</item>
        <item name="floatingActionButtonStyle">@style/Widget.StudionDonationStokvel.Fab</item>
        <item name="textInputStyle">@style/Widget.StudionDonationStokvel.TextInputLayout</item>
    </style>

    <style name="Theme.StudionDonationStokvel.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StudionDonationStokvel.AppBarOverlay" parent="ThemeOverlay.Material3.ActionBar" />

    <style name="Theme.StudionDonationStokvel.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Widget.StudionDonationStokvel.MaterialCard" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Large</item>
        <item name="cardBackgroundColor">@color/surface_elevated</item>
    </style>

    <style name="Widget.StudionDonationStokvel.Fab" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/purple_500</item>
        <item name="rippleColor">@color/coral_400</item>
    </style>

    <style name="Widget.StudionDonationStokvel.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/surface_elevated</item>
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>
</resources>