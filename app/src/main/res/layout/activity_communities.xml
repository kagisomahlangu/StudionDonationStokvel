<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background_soft">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            app:navigationIcon="@drawable/ic_menu"
            app:navigationIconTint="@color/text_primary"
            app:title="Communities"
            app:titleTextColor="@color/text_primary"
            app:subtitle="Connect with your peers"
            app:subtitleTextColor="@color/text_secondary" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="96dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_user_institution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="10dp"
                    app:strokeColor="@color/purple_200"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/home_hero_background"
                        android:padding="24dp">

                        <TextView
                            android:id="@+id/tv_user_institution"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your Group"
                            android:textAlignment="center"
                            android:textColor="@color/text_on_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_join_group"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="16dp"
                            android:text="Join group chat"
                            android:textAllCaps="false" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_search"
                    style="@style/Widget.StudionDonationStokvel.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:startIconDrawable="@drawable/ic_search"
                    app:startIconTint="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/search_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Search institutions"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_filters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:singleSelection="true"
                    app:selectionRequired="false"
                    app:chipSpacingHorizontal="8dp">

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Assist.Elevated"
                        android:text="All" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Assist.Elevated"
                        android:text="Popular" />

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.Material3.Chip.Assist.Elevated"
                        android:text="Nearby" />
                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:id="@+id/tv_no_institutions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_background"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="No institutions found. Try searching."
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_institutions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="6"
                    tools:listitem="@layout/item_institution" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/surface_elevated"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/nav_item_tint"
        app:itemTextColor="@color/nav_item_tint"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>